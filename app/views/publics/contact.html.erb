        <article class="span8">
              <h3>Contactanos</h3>
              <div class="inner-1">
           	<%= form_for @message, :url => publics_create_message_path, :html => { :class => 'form-horizontal' } do |f| %>
  				<div class="control-group">
    				<%= f.label :name, "Nombre: ", :class => 'control-label' %>
    			<div class="controls">
      				<%= f.text_field :name, :class => 'text_area' %>
    			</div>
    			</br>
  				<div class="control-group">
    				<%= f.label :phone, "Teléfono: ", :class => 'control-label' %>
    			<div class="controls">
      				<%= f.phone_field :phone, :class => 'text_area' %>
    			</div>
    			</br>
  				<div class="control-group">
    				<%= f.label :email, "Correo Electrónico: ", :class => 'control-label' %>
    			<div class="controls">
      				<%= f.email_field :email, :class => 'text_area' %>
    			</div>
    			</br>
  				<div class="control-group">
    				<%= f.label :reason, "Motivo: ", :class => 'control-label' %>
    			<div class="controls">
      				<%= f.text_field :reason, :class => 'text_area' %>
    			</div>
    			</br>
  				<div class="control-group">
    				<%= f.label :message, "Mensaje: ", :class => 'control-label' %>
    			<div class="controls">
      				<%= f.text_area :message, :class => 'text_area', size: "25x10" %>
    			</div>
    			</br>
    			<div align="center">
    				<%= f.submit("Enviar")%>
            	</div>
            <% end %>
          </div>
